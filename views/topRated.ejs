<div class="games-list">
    <% topGames.forEach(game => { %>
        <div class="game-item">
            <h2><a href="/game/<%= game.id %>"><%= game.title %></a></h2>
            <p>Released: <%= game.year %></p>
            <p>Rating: <%= game.rating %>/10</p>
            <p><%= game.description %></p>
        </div>
    <% }) %>
</div>