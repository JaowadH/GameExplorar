<div>
    <form action="/search" method="GET">
        <input type="text" name="title" placeholder="Game Title">
        <input type="text" name="genre" placeholder="Genre">
        <input type="text" name="developer" placeholder="Developer">
        <input type="number" name="year" placeholder="Release Year">
        <input type="number" name="reviews" placeholder="Min. Reviews">
        <input type="number" step="0.1" name="rating" placeholder="Min. Rating">
        <select name="released">
            <option value="">Any</option>
            <option value="true">Released</option>
            <option value="false">Unreleased</option>
        </select>
        <button type="submit">Search</button>
    </form>
    
</div>



<div class="game-container">
<section class="games-list">
    <% games.forEach(game => { %>
        <div class="game-item">
            <h2 class="game-title"><a href="/game/<%= game.id %>"><%= game.title %></a></h2>
            <img src="<%= game.image %>" alt="<%= game.title %>" class="game-image">
            <div class="game-info">
            <p>Released: <%= game.releaseYear %></p>
            <p>Rating: <%= game.averageRating %>/10</p>
            </div>
        </div>
    <% }) %>
</section>

<script src="/script.js"></script>

</div>